<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adesh.login.EventsList">

    <RelativeLayout
        android:background="@drawable/mc" android:paddingTop="16dp"
        android:paddingRight="18dp" android:paddingLeft="18dp" android:paddingBottom="18dp"
        android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <com.hitomi.cmlibrary.CircleMenu
            android:id="@+id/circle_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:scaleX="2.0"
            android:scaleY="2.0" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>