<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adesh.login.Summit">

    <RelativeLayout
        android:background="@drawable/y" android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="18dp" android:paddingLeft="18dp" android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="498dp"
        android:layout_height="653dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="-61dp">

        <TextView
            android:id="@+id/Tcricket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:text="CRICKET" />

        <TextView
            android:id="@+id/Tfootball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Tcricket"
            android:layout_marginTop="21dp"
            android:text="FOOTBALL" />

        <TextView
            android:id="@+id/Tbaseball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/Tfootball"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="19dp"
            android:text="BASE BALL" />

        <TextView
            android:id="@+id/Tvolleyball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Tbaseball"
            android:layout_marginTop="18dp"
            android:text="VOLLEY BALL" />

        <TextView
            android:id="@+id/Tbadminton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Tvolleyball"
            android:layout_marginTop="19dp"
            android:text="BADMINTON" />

        <TextView
            android:id="@+id/Trowing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Tbaseball"
            android:layout_alignRight="@+id/Tbaseball"
            android:layout_below="@+id/Tbadminton"
            android:layout_marginTop="23dp"
            android:text="ROWING" />

        <TextView
            android:id="@+id/Tcarrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Trowing"
            android:layout_alignRight="@+id/Trowing"
            android:layout_below="@+id/Trowing"
            android:layout_marginTop="24dp"
            android:text="CARROM" />




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
