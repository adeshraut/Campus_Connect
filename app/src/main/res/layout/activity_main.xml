<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:background="@drawable/bridge" android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="18dp" android:paddingLeft="18dp" android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent" android:orientation="vertical">

    <EditText android:background="@android:color/transparent"
        android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp" android:textColorHint="#fff" android:hint="Username"
        android:drawablePadding="12dp" android:id="@+id/Tfusername" android:ems="10" android:inputType="textEmailAddress"/>

    <View android:background="#f9d7db"
        android:layout_height="1dp" android:layout_width="match_parent"/>

    <EditText android:background="@android:color/transparent"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_marginTop="4dp" android:padding="16dp" android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:textColorHint="#fff" android:hint="Password" android:drawablePadding="16dp"
        android:id="@+id/Tfpassword" android:ems="10" android:inputType="textPassword" android:maxLines="1"/>

    <View android:background="#f9d7db" android:layout_height="1dp" android:layout_width="match_parent"/>

        <Button
            android:id="@+id/Login"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#fff"
            android:clickable="true"
            android:padding="16dp"
            android:text="Log in"
            android:onClick="OnLogin"
            android:textAllCaps="false"
            android:textColor="#f16f71"
            android:textSize="18sp"
            android:textStyle="normal" />

    <Button android:background="#f08b98" android:layout_height="wrap_content"
        android:layout_width="match_parent" android:layout_marginTop="16dp"
        android:padding="16dp" android:id="@+id/yash" android:textColor="#fff"
        android:text="Sign up" style="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" android:clickable="true" android:textStyle="normal"
        android:onClick="OnSign"
        android:textAllCaps="false"/>


</LinearLayout>

</ScrollView>

</LinearLayout>